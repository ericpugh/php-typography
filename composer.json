{
    "name": "mundschenk-at/php-typography",
    "description": "A PHP library for improving your web typography",
    "type": "library",
    "license": "GPL 2.0+",
    "authors": [
        {
            "name": "Peter Putzer",
            "email": "github@mundschenk.at",
            "homepage": "https://code.mundschenk.at",
            "role": "Developer"
        },
        {
            "name": "Jeffrey D. King",
            "email": "jeff.king@weathersource.com",
            "homepage": "http://kingdesk.com",
            "role": "Original author"
        }
    ],

    "require": {
        "php": ">=5.6.0",
        "ext-pcre": "*",
        "ext-mbstring": "*",
        "masterminds/html5": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "6.*",
        "squizlabs/php_codesniffer": "^2.9",
        "wp-coding-standards/wpcs": "dev-master",
        "wimg/php-compatibility": "dev-master",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.1"
    },

    "autoload": {
        "classmap": ["src/"]
    },

    "autoload-dev": {
        "classmap": ["tests/"]
    },

    "scripts": {
        "post-update-cmd": [
            "wget -NP src/IANA https://data.iana.org/TLD/tlds-alpha-by-domain.txt"
        ],
        "post-install-cmd": [
            "wget -NP src/IANA https://data.iana.org/TLD/tlds-alpha-by-domain.txt"
        ],
        "phpcs": [
            "phpcs -p -s -v -n src/ tests/ --ignore=tests/perf.php,tests/coverage --extensions=php"
        ],
        "test": [
            "phpunit --testsuite PHP-Typography"
        ],
        "coverage": [
            "phpunit --testsuite PHP-Typography --coverage-html test/coverage"
        ]
    }
}
